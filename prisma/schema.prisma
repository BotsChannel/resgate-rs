generator client {
  provider = "prisma-client-js"
  binaryTargets = ["rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Person {
  id        String   @id @default(cuid())
  name      String
  age       Int
  status    String
  photoUrl  String
  cidade    String
  endereco  String
  abrigo    String
  entrada   String
  comentarios Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  message   String
  author    String
  timestamp DateTime @default(now())
  person    Person   @relation(fields: [personId], references: [id])
  personId  String
}

model chat_session {
  id        String   @id @default(cuid())
}

model chat_message {
  id        String   @id @default(cuid())
  message   String
  author    String
  timestamp DateTime @default(now())
}